{
  "manifest_version": 3,
  "name": "Smart Dark Mode",
  "version": "1.0",
  "description": "Enable dark mode on websites without built-in dark themes. Saves preferences per site.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
